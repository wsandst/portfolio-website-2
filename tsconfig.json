{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "components/**/*.ts", "components/**/*.tsx", 
                "pages/**/*.ts", "pages/**/*.tsx",
                "lib/**/*.ts", "lib/**/*.tsx",
                "@types/**/*.ts", "@types/**/*.tsx"
             ]
}
